{
	"compilerOptions": {
		"lib": ["es5", "es6", "es2015",  "es2017", "es2020", "dom"],
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"downlevelIteration": true,
		"types": [],

		"typeRoots": [
			"src/types/global.d.ts"
		]
	},
	"include": [
		"src/**/*"
	]
}